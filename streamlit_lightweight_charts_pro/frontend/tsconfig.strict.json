{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "exactOptionalPropertyTypes": true,
    "noPropertyAccessFromIndexSignature": false,
    "types": ["node"]
  },
  "include": [
    "src/types/ChartInterfaces.ts",
    "src/components/ChartSeriesManager.tsx",
    "src/components/ChartSyncManager.tsx",
    "src/services/TemplateEngine.ts",
    "src/services/ChartPrimitiveManager.ts",
    "src/services/CornerLayoutManager.ts",
    "src/services/CoordinateCacheManager.ts",
    "src/services/ChartDimensionsService.ts",
    "src/services/PaneCoordinatesService.ts"
  ]
}
