    "@types/scheduler": "^0.26.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@vitejs/plugin-react": "^5.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "canvas": "^3.2.0",
    "chai": "^6.0.1",
    "compression-webpack-plugin": "^11.1.0",
    "eslint": "^9.36.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "http-server": "^14.1.1",
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0",
    "prettier": "^3.6.2",
    "terser-webpack-plugin": "^5.3.7",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1",
    "vite": "^7.1.7",
    "vite-bundle-analyzer": "^1.2.3",
    "vitest": "^3.2.4",
    "webpack-bundle-analyzer": "^4.9.0"
  },
  "resolutions": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "^5.9.2"
  },
  "overrides": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "^5.9.2"
  },
  "scripts": {
    "start": "vite",
    "build": "vite build && node fix-html.cjs",
    "build:analyze": "vite build --mode analyze",
    "build:size": "vite build --mode analyze",
    "analyze:size": "npx vite-bundle-analyzer",
    "build:optimized": "vite build",
    "preview": "vite preview",
    "test": "NODE_OPTIONS='--max-old-space-size=8192 --max-semi-space-size=256 --expose-gc' vitest run --pool=forks --poolOptions.forks.singleFork=true --no-coverage",
    "test:watch": "NODE_OPTIONS='--max-old-space-size=4096' vitest",
    "test:ui": "NODE_OPTIONS='--max-old-space-size=4096' vitest --ui",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e-tests",
    "test:unit": "NODE_OPTIONS='--max-old-space-size=6144 --max-semi-space-size=256 --expose-gc' vitest run src/__tests__/components src/__tests__/config src/__tests__/helpers src/__tests__/hooks src/__tests__/mocks src/__tests__/plugins src/__tests__/primitives src/__tests__/services src/__tests__/setup src/__tests__/unit src/__tests__/utils --pool=forks --no-coverage",
    "test:services": "NODE_OPTIONS='--max-old-space-size=4096' vitest run --pool=threads src/__tests__/services",
    "test:services:batch1": "NODE_OPTIONS='--max-old-space-size=3072' vitest run --pool=threads src/__tests__/services/CornerLayoutManager.test.ts src/__tests__/services/ChartPrimitiveManager.test.ts src/__tests__/services/ChartCoordinateService.test.ts",
    "test:services:batch2": "NODE_OPTIONS='--max-old-space-size=3072' vitest run --pool=threads src/__tests__/services/PrimitiveEventManager.test.ts src/__tests__/services/PaneCollapseManager.test.ts src/__tests__/services/ChartSyncManager.test.ts",
    "test:services:batch3": "NODE_OPTIONS='--max-old-space-size=3072' vitest run --pool=threads src/__tests__/services/StreamlitSeriesConfigService.test.ts src/__tests__/services/SeriesDialogManager.test.ts src/__tests__/services/tradeVisualization.test.ts src/__tests__/services/annotationSystem.test.ts",
    "test:integration": "NODE_OPTIONS='--max-old-space-size=3072 --max-semi-space-size=128' vitest run src/__tests__/integration --pool=forks",
    "test:e2e-tests": "NODE_OPTIONS='--max-old-space-size=3072 --max-semi-space-size=128' vitest run src/__tests__/e2e --pool=forks",
    "test:coverage": "NODE_OPTIONS='--max-old-space-size=8192 --max-semi-space-size=256' vitest run --coverage --pool=forks --poolOptions.forks.singleFork=true",
    "test:ci": "NODE_OPTIONS='--max-old-space-size=2048' vitest run --coverage",
    "test:visual": "NODE_OPTIONS='--max-old-space-size=2048' vitest run --project=visual",
    "test:visual:watch": "NODE_OPTIONS='--max-old-space-size=2048' vitest watch --project=visual",
    "test:visual:update": "UPDATE_SNAPSHOTS=true npm run test:visual",
    "test:visual:ui": "NODE_OPTIONS='--max-old-space-size=2048' vitest --project=visual --ui",
    "test:e2e": "playwright test",
    "test:e2e:update": "playwright test --update-snapshots",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "type-check": "tsc --noEmit",
    "type-check:strict": "tsc --project tsconfig.strict.json --noEmit",
    "build:prod": "vite build",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx}\"",
    "format:fix": "prettier --write --fix \"src/**/*.{ts,tsx,js,jsx}\"",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx --fix",
    "lint:check": "eslint src --ext .ts,.tsx,.js,.jsx",
    "code-quality": "npm run format && npm run lint && npm run type-check",
    "precommit": "npm run code-quality",
    "test:quick": "NODE_OPTIONS='--max-old-space-size=4096' vitest run src/__tests__/config src/__tests__/utils --pool=threads --no-coverage",
    "test:batched": "bash run-tests-batched.sh"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "homepage": "."
}
