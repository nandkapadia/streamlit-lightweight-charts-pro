{
  "name": "streamlit_lightweight_charts_pro",
  "version": "0.1.2",
  "private": false,
  "license": "MIT",
  "dependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "lightweight-charts": "^5.0.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-scripts": "^5.0.1",
    "streamlit-component-lib": "^2.0.0",
    "streamlit-component-lib-react-hooks": "^1.2.8"
  },
  "devDependencies": {
    "@craco/craco": "^7.1.0",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.6.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/chai": "^5.2.2",
    "chai": "^6.0.1",
    "compression-webpack-plugin": "^11.1.0",
    "jest-environment-jsdom": "^29.5.0",
    "prettier": "^3.6.2",
    "terser-webpack-plugin": "^5.3.7",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2",
    "webpack-bundle-analyzer": "^4.9.0"
  },
  "resolutions": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.9.2"
  },
  "overrides": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.9.2"
  },
  "scripts": {
    "start": "craco start",
    "build": "GENERATE_SOURCEMAP=false craco build",
    "build:analyze": "GENERATE_SOURCEMAP=false ANALYZE=true craco build",
    "build:size": "GENERATE_SOURCEMAP=false ANALYZE=true craco build",
    "analyze:size": "npx webpack-bundle-analyzer build/static/js/*.js --mode=static --report-filename=bundle-report.html",
    "build:optimized": "GENERATE_SOURCEMAP=false NODE_ENV=production craco build",
    "test": "react-scripts test --watch --testLocationInResults",
    "test:all": "react-scripts test --watchAll=false --verbose --testLocationInResults",
    "test:unit": "react-scripts test --watchAll=false --testPathPattern=\"src/__tests__/(unit|utils|hooks)\" --verbose",
    "test:components": "react-scripts test --watchAll=false --testPathPattern=\"src/__tests__/components\" --verbose",
    "test:plugins": "react-scripts test --watchAll=false --testPathPattern=\"src/__tests__/plugins\" --verbose",
    "test:integration": "react-scripts test --watchAll=false --testPathPattern=\"src/__tests__/integration\" --verbose",
    "test:coverage": "react-scripts test --watchAll=false --coverage --verbose",
    "test:ci": "react-scripts test --watchAll=false --coverage --verbose --testResultsProcessor=jest-sonar-reporter",
    "eject": "react-scripts eject",
    "type-check": "tsc --noEmit",
    "type-check:strict": "tsc --project tsconfig.strict.json --noEmit",
    "build:prod": "GENERATE_SOURCEMAP=false NODE_ENV=production craco build",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx}\"",
    "format:fix": "prettier --write --fix \"src/**/*.{ts,tsx,js,jsx}\"",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx --fix",
    "lint:check": "eslint src --ext .ts,.tsx,.js,.jsx",
    "code-quality": "npm run format && npm run lint && npm run type-check",
    "precommit": "npm run code-quality"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.test.(js|jsx|ts|tsx)",
      "<rootDir>/src/**/*.test.(js|jsx|ts|tsx)",
      "<rootDir>/src/**/*.spec.(js|jsx|ts|tsx)"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(streamlit-component-lib|streamlit-component-lib-react-hooks)/)"
    ],
    "moduleNameMapper": {
      "^streamlit-component-lib$": "<rootDir>/src/__tests__/setup/__mocks__/streamlit-component-lib.js",
      "^streamlit-component-lib-react-hooks$": "<rootDir>/src/__tests__/setup/__mocks__/streamlit-component-lib-react-hooks.js"
    }
  },
  "homepage": "."
}
