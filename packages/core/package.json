{
  "name": "@lightweight-charts-pro/core",
  "version": "0.2.0",
  "description": "Framework-agnostic core library for TradingView Lightweight Charts Pro",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./plugins": {
      "import": "./dist/plugins/index.js",
      "require": "./dist/plugins/index.cjs",
      "types": "./dist/plugins/index.d.ts"
    },
    "./primitives": {
      "import": "./dist/primitives/index.js",
      "require": "./dist/primitives/index.cjs",
      "types": "./dist/primitives/index.d.ts"
    },
    "./series": {
      "import": "./dist/series/index.js",
      "require": "./dist/series/index.cjs",
      "types": "./dist/series/index.d.ts"
    },
    "./services": {
      "import": "./dist/services/index.js",
      "require": "./dist/services/index.cjs",
      "types": "./dist/services/index.d.ts"
    },
    "./utils": {
      "import": "./dist/utils/index.js",
      "require": "./dist/utils/index.cjs",
      "types": "./dist/utils/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nandkapadia/streamlit-lightweight-charts-pro.git",
    "directory": "packages/core"
  },
  "keywords": [
    "lightweight-charts",
    "tradingview",
    "charts",
    "financial",
    "trading",
    "typescript"
  ],
  "peerDependencies": {
    "lightweight-charts": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "jsdom": "^27.0.0",
    "lightweight-charts": "^5.0.8",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "build": "vite build",
    "build:types": "tsc --emitDeclarationOnly",
    "dev": "vite build --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  }
}
