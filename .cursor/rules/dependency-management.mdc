#!/usr/bin/env python3
"""Script to update dependencies with security checks."""

import subprocess
import sys
from pathlib import Path
from typing import List, Dict, Any
import json

def run_command(cmd: List[str]) -> subprocess.CompletedProcess:
    """Run command and return result."""
    return subprocess.run(cmd, capture_output=True, text=True)

def check_security() -> bool:
    """Check for security vulnerabilities."""
    print("ğŸ” Checking for security vulnerabilities...")

    # Run safety check
    result = run_command(["safety", "check", "--json"])
    if result.returncode != 0:
        print("âŒ Security vulnerabilities found:")
        try:
            vulnerabilities = json.loads(result.stdout)
            for vuln in vulnerabilities:
                print(f"  - {vuln['package']}: {vuln['vulnerability']}")
        except json.JSONDecodeError:
            print(result.stdout)
        return False

    print("âœ… No security vulnerabilities found")
    return True

def update_dependencies() -> bool:
    """Update dependencies safely."""
    print("ğŸ“¦ Updating dependencies...")

    # Update pip
    run_command([sys.executable, "-m", "pip", "install", "--upgrade", "pip"])

    # Update dependencies
    result = run_command([sys.executable, "-m", "pip", "install", "--upgrade", "-r", "requirements.txt"])
    if result.returncode != 0:
        print(f"âŒ Failed to update dependencies: {result.stderr}")
        return False

    print("âœ… Dependencies updated successfully")
    return True

def main():
    """Main update process."""
    print("ğŸš€ Starting dependency update process...")

    # Check security before update
    if not check_security():
        print("âŒ Security check failed. Aborting update.")
        sys.exit(1)

    # Update dependencies
    if not update_dependencies():
        print("âŒ Dependency update failed.")
        sys.exit(1)

    # Check security after update
    if not check_security():
        print("âŒ Security check failed after update. Please review changes.")
        sys.exit(1)

    print("âœ… Dependency update completed successfully")

if __name__ == "__main__":
